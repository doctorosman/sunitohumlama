<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.osmanyasirinan.sunitohumlama">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.osmanyasirinan.sunitohumlama.main.FilteredList"
            android:screenOrientation="portrait"
            android:parentActivityName="com.osmanyasirinan.sunitohumlama.main.MainActivity"/>
        <activity
            android:name="com.osmanyasirinan.sunitohumlama.database.HayvanDuzenle"
            android:parentActivityName="com.osmanyasirinan.sunitohumlama.database.HayvanDetay"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.osmanyasirinan.sunitohumlama.database.HayvanDetay"
            android:parentActivityName="com.osmanyasirinan.sunitohumlama.main.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.osmanyasirinan.sunitohumlama.database.YeniHayvan"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme" />
        <activity android:name="com.osmanyasirinan.sunitohumlama.main.MainActivity" />
        <activity
            android:name="com.osmanyasirinan.sunitohumlama.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>