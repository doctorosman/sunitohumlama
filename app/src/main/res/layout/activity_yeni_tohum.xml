<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#ffffff"
    tools:context=".tohum.YeniTohum">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/tohumnewimgview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_bubble_chart_black_24dp"
            android:contentDescription="@string/tohumadi" />

        <EditText
            android:id="@+id/tohumnewet"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:hint="@string/tohumadi"
            android:inputType="textCapSentences"
            android:importantForAutofill="no" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/miktari"
        android:textColor="#000000"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/tohumnewazalt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:srcCompat="@drawable/ic_expand_more_black_24dp"
            android:contentDescription="@string/cd_azalt" />


        <EditText
            android:id="@+id/tohumnewmiktar"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@string/sifir"
            android:textAlignment="center"
            android:importantForAutofill="no"
            tools:ignore="LabelFor" />

        <ImageButton
            android:id="@+id/tohumnewarttir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:srcCompat="@drawable/ic_expand_less_black_24dp"
            android:contentDescription="@string/cd_arttir" />

    </LinearLayout>

    <Button
        android:id="@+id/tohumnewb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#7B1FA2"
        android:padding="10dp"
        android:text="@string/button_ekle"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:icon="@drawable/ic_add_black_24dp" />

</LinearLayout>